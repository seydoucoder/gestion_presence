<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<BorderPane prefHeight="650.0" prefWidth="1250.0" style="-fx-background-color: #f4f4f9;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gestion_presence.gestion_presence.HelloController">
    <left>
        <VBox prefHeight="670.0" prefWidth="250.0" style="-fx-background-color: linear-gradient(to bottom, #2c1f47, #7B1FA2); -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 0);">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20" />
            </padding>
            <children>
                <VBox alignment="CENTER" spacing="15" style="-fx-padding: 0 0 30 0;">
                    <FontAwesomeIconView glyphName="GRADUATION_CAP" size="40" fill="white" />
                    <Label text="Gestion Présence" textFill="WHITE">
                        <font>
                            <Font name="Segoe UI Bold" size="22.0" />
                        </font>
                    </Label>
                    <Button fx:id="btnLogout" onAction="#logout" 
                            style="-fx-background-color: #d9534f; -fx-text-fill: white; -fx-background-radius: 20; -fx-padding: 8 16; -fx-cursor: hand;">
                        <graphic>
                            <FontAwesomeIconView glyphName="SIGN_OUT" size="14" fill="WHITE" />
                        </graphic>
                        <text>Déconnexion</text>
                    </Button>
                </VBox>

                <VBox spacing="10">
                    <Button fx:id="btnDash" maxWidth="Infinity"
                            style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 12 20; -fx-alignment: CENTER_LEFT;">
                        <graphic>
                            <FontAwesomeIconView glyphName="DASHBOARD" size="18" />
                        </graphic>
                        <text>Dashboard</text>
                    </Button>

                    <Button fx:id="btnSalle" maxWidth="Infinity"
                            style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 12 20; -fx-alignment: CENTER_LEFT;">
                        <graphic>
                            <FontAwesomeIconView glyphName="BUILDING" size="18" />
                        </graphic>
                        <text>Salles</text>
                    </Button>

                    <Button fx:id="btnCours" maxWidth="Infinity"
                            style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 12 20; -fx-alignment: CENTER_LEFT;">
                        <graphic>
                            <FontAwesomeIconView glyphName="BOOK" size="18" />
                        </graphic>
                        <text>Cours</text>
                    </Button>

                    <Button fx:id="btnEmerge" maxWidth="Infinity"
                            style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 12 20; -fx-alignment: CENTER_LEFT;">
                        <graphic>
                            <FontAwesomeIconView glyphName="CHECK_SQUARE" size="18" />
                        </graphic>
                        <text>Émargements</text>
                    </Button>

                    <Button fx:id="btnUser" maxWidth="Infinity"
                            style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 12 20; -fx-alignment: CENTER_LEFT;">
                        <graphic>
                            <FontAwesomeIconView glyphName="USERS" size="18" />
                        </graphic>
                        <text>Utilisateurs</text>
                    </Button>

                    <Button fx:id="btnProf" maxWidth="Infinity"
                            style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 12 20; -fx-alignment: CENTER_LEFT;">
                        <graphic>
                            <FontAwesomeIconView glyphName="EDIT" size="18" />
                        </graphic>
                        <text>Professeurs</text>
                    </Button>
                </VBox>
            </children>
        </VBox>
    </left>

    <center>
        <AnchorPane fx:id="contentArea" prefHeight="650.0" prefWidth="736.0" style="-fx-background-color: white; -fx-background-radius: 20;">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20" />
            </padding>
        </AnchorPane>
    </center>
</BorderPane>
