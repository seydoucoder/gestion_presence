<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gestion_presence.gestion_presence.SalleController">


    <VBox prefWidth="952" spacing="20" style="-fx-padding: 20;">
        <children>

            <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Liste des Salles" />


            <TableView fx:id="tableSalles">
                <columns>
                    <TableColumn fx:id="colId" prefWidth="50" text="ID" />
                    <TableColumn fx:id="colLibelle" prefWidth="400" text="Libellé de la Salle" />
                </columns>
            </TableView>


            <HBox spacing="10">
                <TextField fx:id="txtLibelle" prefWidth="400" promptText="Libellé de la Salle" />

                <Button fx:id="btnAjouter" onAction="#addSalle" style="-fx-background-color: green; -fx-text-fill: white;" text="Ajouter" />
                <Button fx:id="btnModifier" onAction="#modifSalle" style="-fx-background-color: orange; -fx-text-fill: white;" text="Modifier" />
                <Button fx:id="btnSupprimer" onAction="#deleteSalle" style="-fx-background-color: red; -fx-text-fill: white;" text="Supprimer" />
            </HBox>
        </children>
    </VBox>

</AnchorPane>
